{
  "name": "<name>",
  "version": "0.1.0",
  "files": ["dist"],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "node": "node --experimental-specifier-resolution=node --no-warnings",
    "test": "vitest --dir=test run",
    "lint": "eslint src --fix",
    "dist:types": "tsc && npm run node scripts/mergeDeclarationFiles.js && shx rm -rf dist/types && eslint dist/**/*.ts --fix",
    "dist:cjs": "esbuild src/index.ts --bundle --format=cjs --platform=node --outfile=dist/index.cjs",
    "dist:esm": "esbuild src/index.ts --bundle --format=esm --platform=node --outfile=dist/index.mjs",
    "dist": "shx rm -rf dist && npm run dist:cjs && npm run dist:esm && npm run dist:types"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.48.0",
    "esbuild": "^0.18.10",
    "eslint": "8.22.0",
    "shx": "^0.3.4",
    "typescript": "^4.9.5",
    "vitest": "^0.32.0"
  }
}
